/* pages/index/calculator/cal.wxss */
.page{
  height:100%;
  display:flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}
.screen{
background-color: #ffffff;
width: 650rpx;
height: 150rpx;
line-height: 150rpx;
border: 1px solid #ddd;
border-radius: 3rpx;
}
.btnGroup{
  display: flex;
  flex-direction: row;
}
.item{
  width: 160rpx;
  min-height: 150rpx;
  line-height: 150rpx;
  text-shadow: 0 1px 1px rgba(0, 0, 0, 3)
}
.orange{
  background-color: orangered;

}
.blue{
background-color: #0095cd;
}
.button-hover-num{
  background-color: #0094cc;
}
.other-button-hover{
  background-color: red;
}